# bitFlyer APIキー
# https://bitflyer.com/ja-jp/api でAPIキーを発行
BITFLYER_API_KEY=your_api_key_here
BITFLYER_API_SECRET=your_api_secret_here

# 取引を有効にする（安全対策）
# bitFlyerにはテストネットがないため、全ての取引は本番（実際のお金）です
# 理解した上で取引を有効にする場合のみ yes を設定
CONFIRM_TRADING=yes

# 取引設定
SYMBOL=BTC/JPY
TIMEFRAME=1h

# リスク管理
# 1回の取引で使う最大資金割合（0.35 = 35%）
MAX_POSITION_PERCENT=0.35
# 損切りライン（0.10 = 10%下落で損切り）
STOP_LOSS_PERCENT=0.10

# RSI戦略設定（推奨値: バックテストで最良だったパラメータ）
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# 移動平均設定（レガシー、将来削除予定）
MA_SHORT_PERIOD=10
MA_LONG_PERIOD=20

# Supabase設定（オプション）
# https://supabase.com/ でプロジェクト作成後、Settings > API から取得
# 設定しない場合はローカルCSVのみにログを保存
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_anon_key_here
