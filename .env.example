# bitFlyer APIキー
# https://bitflyer.com/ja-jp/api でAPIキーを発行
BITFLYER_API_KEY=your_api_key_here
BITFLYER_API_SECRET=your_api_secret_here

# 取引を有効にする（安全対策）
# bitFlyerにはテストネットがないため、全ての取引は本番（実際のお金）です
# 理解した上で取引を有効にする場合のみ yes を設定
CONFIRM_TRADING=yes

# ===========================================
# 複数通貨設定
# ===========================================

# 取引する通貨ペア（カンマ区切りで複数指定可能）
SYMBOLS=BTC/JPY,ETH/JPY

# 共通設定
TIMEFRAME=1h

# ===========================================
# BTC/JPY 設定（RSI逆張り戦略推奨）
# ===========================================
BTC_STRATEGY=rsi_contrarian
BTC_MAX_POSITION_PERCENT=0.35
BTC_STOP_LOSS_PERCENT=0.10

# RSI設定（バックテストで最良だったパラメータ: +11.1%）
BTC_RSI_PERIOD=14
BTC_RSI_OVERSOLD=30
BTC_RSI_OVERBOUGHT=70

# ===========================================
# ETH/JPY 設定（MA順張り戦略推奨）
# ===========================================
ETH_STRATEGY=ma_crossover
ETH_MAX_POSITION_PERCENT=0.35
ETH_STOP_LOSS_PERCENT=0.10

# MA設定（バックテストで最良だったパラメータ: +15.0%）
ETH_MA_SHORT_PERIOD=25
ETH_MA_LONG_PERIOD=75

# ===========================================
# グローバルデフォルト値（通貨別設定がない場合に使用）
# ===========================================
# MAX_POSITION_PERCENT=0.35
# STOP_LOSS_PERCENT=0.10
# RSI_PERIOD=14
# RSI_OVERSOLD=30
# RSI_OVERBOUGHT=70
# MA_SHORT_PERIOD=25
# MA_LONG_PERIOD=75

# ===========================================
# ダッシュボード認証（オプション）
# ===========================================
# 設定しない場合は認証なしでアクセス可能
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your_password_here

# ===========================================
# Supabase設定（オプション）
# ===========================================
# https://supabase.com/ でプロジェクト作成後、Settings > API から取得
# 設定しない場合はローカルCSVのみにログを保存
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_anon_key_here

# ===========================================
# 戦略の選択について
# ===========================================
# バックテスト結果（2025年データ）:
#
# BTC:
#   - RSI逆張り (14, 30/70): +11.1% ← 推奨
#   - MA順張り (25/75):      -4.9%
#
# ETH:
#   - MA順張り (25/75):      +15.0% ← 推奨
#   - RSI逆張り (21, 25/80): +11.9%
#
# 利用可能な戦略:
#   - rsi_contrarian: RSI逆張り（売られすぎで買い、買われすぎで売り）
#   - ma_crossover:   MA順張り（ゴールデンクロスで買い、デッドクロスで売り）
